<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.err.mariagetn.models.Inscription"
    android:background="@color/home">
    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="458dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Inscription" >

        <EditText
            android:id="@+id/id_prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_nom"
            android:layout_below="@+id/id_nom"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:hint="prenom" />

        <EditText
            android:id="@+id/id_emaiil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_prenom"
            android:layout_below="@+id/id_prenom"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:hint="email" />

        <EditText
            android:id="@+id/id_tell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_emaiil"
            android:layout_below="@+id/id_emaiil"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:hint="num tÃ©lephone" />

        <EditText
            android:id="@+id/id_passwordd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_tell"
            android:layout_alignRight="@+id/id_tell"
            android:layout_below="@+id/id_tell"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/id_conff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_passwordd"
            android:layout_alignRight="@+id/id_passwordd"
            android:layout_below="@+id/id_passwordd"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/border_edittext"
            android:ems="10"
            android:height="10dip"
            android:hint="confirmation"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_conff"
            android:layout_below="@+id/id_conff"
            android:text=" " />

        <EditText
            android:id="@+id/id_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/adress"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:hint="Nom"
            android:paddingStart="20dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="57dp"
            android:text="valider" />

        <EditText
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button1"
            android:layout_below="@+id/textView1"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:hint="Adresse"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/adress"
            android:layout_below="@+id/adress"
            android:layout_marginTop="50dp"
            android:text="Annuler" />
    </RelativeLayout>



</ScrollView>
